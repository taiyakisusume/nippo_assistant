{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "lib": ["ESNext", "DOM", "DOM.Iterable"],
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": ["node_modules/@types"],
        "outDir": "dist", // この設定がないと、ts ファイルと同一ディレクトリに js が生成されてしまう

        "allowImportingTsExtensions": true,
        "noEmit": true,
        "jsx": "react-jsx"
    },
    "include": ["src"]
}
